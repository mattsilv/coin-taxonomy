{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["grades"],
  "properties": {
    "grades": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z ]+$": {
          "type": "object",
          "required": ["abbreviation", "description", "numeric_equivalent"],
          "properties": {
            "abbreviation": {
              "type": "string",
              "pattern": "^[A-Z/]+$"
            },
            "description": {
              "type": "string"
            },
            "numeric_equivalent": {
              "type": "string",
              "pattern": "^\\d+(-\\d+)?$"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}