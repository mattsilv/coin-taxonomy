{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["compositions"],
  "properties": {
    "compositions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "composition", "years_used"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "name": {
            "type": "string"
          },
          "composition": {
            "type": "string"
          },
          "years_used": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    }
  }
}